# Blynk Auth Token (get this from Blynk app/console)
BLYNK_AUTH_TOKEN=YOUR_BLYNK_AUTH_TOKEN_HERE

# GSM Modem Configuration
# Common ports:
#   USB modem: /dev/ttyUSB0, /dev/ttyUSB2
#   HAT modem: /dev/ttyAMA0, /dev/ttyS0
MODEM_PORT=/dev/ttyUSB2
MODEM_BAUD=115200

# Gate Controller Phone Number (no dashes or spaces)
GATE_PHONE_NUMBER=9084321957

# Timezone offset from UTC (Eastern = -5, Pacific = -8)
TIMEZONE_OFFSET=-5

# Screen Resolution (3.5" HDMI = 480x320 typically)
SCREEN_WIDTH=480
SCREEN_HEIGHT=320

# Fullscreen mode (true/false) - set false for testing on desktop
FULLSCREEN=true
